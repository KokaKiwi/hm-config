 modules/home-manager/globals.nix | 13 ++++++++++++-
 1 file changed, 12 insertions(+), 1 deletion(-)

diff --git a/modules/home-manager/globals.nix b/modules/home-manager/globals.nix
index 259cd99..cfe0b9c 100644
--- a/modules/home-manager/globals.nix
+++ b/modules/home-manager/globals.nix
@@ -1,4 +1,4 @@
-{ lib, ... }: {
+{ lib, sources, ... }: {
   options.catppuccin = {
     flavour = lib.mkOption {
       type = lib.ctp.types.flavourOption;
@@ -11,5 +11,16 @@
       default = "teal";
       description = "Global Catppuccin accent";
     };
+
+    sources = lib.mkOption {
+      type = lib.types.lazyAttrsOf lib.types.raw;
+      readOnly = true;
+      default = sources;
+      description = "Port sources used accross all options";
+    };
+  };
+
+  config.lib = {
+    inherit (lib) ctp;
   };
 }
